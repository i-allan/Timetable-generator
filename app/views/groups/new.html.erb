<%= form_for(@group) do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %><br />
  
  <%= f.label :discipline_id, "Discipline" %>
  <%= f.select :discipline_id, @discipline_options %><br />
  
  <%= f.fields_for "lessons" do |lessons_fields| -%>
    <% lessons_boxes(lessons_fields) %>
  <% end %>
  
  <%= f.submit "Submit" %>
<% end %>
