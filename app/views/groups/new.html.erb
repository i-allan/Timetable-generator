<%= show_error_messages_for @group %>
<%= form_for(@group) do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %><br />
  
  <%= f.label :discipline_id, "Discipline" %>
  <%= f.select :discipline_id, @discipline_options %><br />
  
  <%= render :partial => "lessons_input_form" %>
  
  <%= f.submit "Submit" %>
  
<% end %>
